<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".view.fragments.FiltersFragment">

        <!-- PS4-->

    <androidx.cardview.widget.CardView
        android:id="@+id/item_ps4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/item_xbox"
        android:layout_marginHorizontal="16dp"
        app:cardCornerRadius="15dp"
        app:cardElevation="3dp"
        >


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:background="@color/blueDark"
                android:padding="7dp"
                android:src="@drawable/icon_ps4" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="20dp"
                android:text="PLAYSTATION"
                android:textSize="20dp" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>




    <!-- xbox-->
    <androidx.cardview.widget.CardView
        android:id="@+id/item_xbox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/item_ps4"
        app:layout_constraintBottom_toTopOf="@id/item_nintendo"
        android:layout_marginHorizontal="16dp"
        app:cardCornerRadius="15dp"
        app:cardElevation="3dp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:background="#1C7C20"
                android:padding="10dp"
                android:src="@drawable/icon_xbox" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="20dp"
                android:text="XBOX"
                android:textSize="20dp" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>



    <!-- NINTENDO -->


    <androidx.cardview.widget.CardView
        android:id="@+id/item_nintendo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/item_xbox"
        app:layout_constraintBottom_toTopOf="@id/item_pc"
        android:layout_marginHorizontal="16dp"
        app:cardCornerRadius="15dp"
        app:cardElevation="3dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:background="#F44336"
                android:padding="7dp"
                android:src="@drawable/icon_nintendo" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="20dp"
                android:text="NINTENDO"
                android:textSize="20dp" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>





    <!-- PC-->

    <androidx.cardview.widget.CardView
        android:id="@+id/item_pc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        app:cardCornerRadius="15dp"
        app:cardElevation="3dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/item_nintendo">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"

            >

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:background="#000B2B"
                android:padding="7dp"
                android:src="@drawable/icon_pc" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="20dp"
                android:text="PC"
                android:textSize="20dp" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>



</androidx.constraintlayout.widget.ConstraintLayout>